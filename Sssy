<script>
    let r = [];
    let p, u, x;

    let ws = '';

    function j(a, b){
        if(ws != '' && ws.readyState == 1){
            ws.close();
        }

        ws = new WebSocket(`wss://server0${a}.gartic.io/socket.io/?EIO=3&transport=websocket`);

        ws.onopen = () => {
            ws.send(`42[1,{"v":20000,"nick":"User${Math.floor(Math.random() * 960)}","avatar":0,"idioma":"23"}]`);
	}
            ws.send(`42[46,1675119253574]`);
        }

        ws.onmessage = (m) => {
            const d = JSON.parse(m.data.slice(2));
            if(d[0] == 5){
                p = d[2];
                r = d[5];
                u = d[1];
                for(let i = 0; i < r.length; i++){
                    if(!r[i].nick.startsWith('ST‎')){
                        ws.send(`42[45,${p},["${r[i].id}",true]]`);
                    }
                }
            }

            if(d[0] == 11){
                x = d[2];

                if(x == '.all'){
                    for(let i = 0; i < r.length; i++){
                        ws.send(`42[45,${p},["${r[i].id}",true]]`);
                    }
                    x = '';
                }

                else if(x != ''){
                    ws.send(`42[45,${p},["${r.filter(a => a.nick == x)[0].id}",true]]`);
                    x = '';
                }
            }

            if(d[0] == 23 && !d[1].nick.startsWith('ST‎')){
                ws.send(`42[45,${p},["${d[1].id}",true]]`);
            }

            if(d[0] == 45 && d[2] == u){
                ws.close();
                j(document.getElementById('sr').value ,document.getElementById('rm').value);
            }
        }
        
        setInterval(() => {
            ws.send(`2`);
        }, 25000);
    }
</script>
